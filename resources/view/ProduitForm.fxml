<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="formRoot" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ProduitFormController">
    <VBox spacing="0" maxWidth="560" styleClass="modal-card">

        <HBox alignment="CENTER_LEFT" styleClass="modal-header">
            <Label fx:id="modalTitle" text="Ajouter un produit" styleClass="modal-title"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </HBox>

        <VBox spacing="22" styleClass="modal-body">
            <GridPane hgap="14" vgap="14">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="140"/>
                    <ColumnConstraints hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Nom :" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="txtNom" promptText="Ex. Ciment 32.5R" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Catégorie :" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="categorieComboBox" promptText="Sélectionnez une catégorie" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Prix (Ar) :" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="txtPrix" promptText="Ex. 45000" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Quantité :" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <HBox spacing="8" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="quantity-box">
                    <TextField fx:id="txtQuantite" promptText="Ex. 100" HBox.hgrow="ALWAYS"/>
                    <ComboBox fx:id="uniteComboBox" promptText="Unité" prefWidth="120"/>
                </HBox>

                <Label text="Fournisseur :" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="txtFournisseur" promptText="Ex. Habibo" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>

            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Button fx:id="btnAnnuler" text="Annuler" onAction="#annuler" styleClass="btn-secondary"/>
                <Button fx:id="btnEnregistrer" text="Ajouter" onAction="#enregistrer" styleClass="btn-primary"/>
            </HBox>
        </VBox>
    </VBox>
</StackPane>
