<?xml version="1.0" encoding="UTF-8"?>

<!-- 📦 Import des classes nécessaires -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>
<?import javafx.collections.ObservableList?>

<BorderPane fx:controller="controller.MainController"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f0f4f8;">

    <!-- ☰ Barre latérale (menu vertical) -->
    <left>
        <VBox spacing="20" alignment="TOP_LEFT"
              style="-fx-background-color: #2c3e50; -fx-padding: 20;">
            <Label text="☰" style="-fx-font-size: 24px; -fx-text-fill: white;" />
            <Button text="Accueil" styleClass="sidebar-button"/>
            <Button text="Produits" styleClass="sidebar-button"/>
            <Button text="Statistiques" styleClass="sidebar-button"/>
            <Button text="Paramètres" styleClass="sidebar-button"/>
        </VBox>
    </left>

    <!-- 🎯 Zone principale (centre) -->
    <center>
        <VBox fx:id="mainContent" spacing="20" alignment="TOP_CENTER"
              style="-fx-padding: 30;" HBox.hgrow="ALWAYS">

            <!-- 🔍 ComboBox de filtre par catégorie -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <ComboBox fx:id="comboFiltre"
                          promptText="Filtrer par catégorie"
                          prefWidth="200"/>
            </HBox>

            <!-- 📝 Formulaire d’ajout -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <TextField fx:id="txtNom" promptText="Nom" />
                <ComboBox fx:id="comboCategorie" promptText="Catégorie" prefWidth="150"/>
                <TextField fx:id="txtPrix" promptText="Prix" />
                <TextField fx:id="txtQuantite" promptText="Quantité" />
            </HBox>

            <!-- ✅ Bouton Ajouter -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Ajouter" onAction="#ajouterProduit" />
            </HBox>

            <!-- 🛠️ Boutons Modifier / Supprimer -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Modifier" onAction="#modifierProduit" />
                <Button text="Supprimer" onAction="#confirmerSuppression" />
            </HBox>


            <!-- 📋 Tableau des produits -->
            <TableView fx:id="tableProduits" prefHeight="300" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNom" text="Nom" prefWidth="150"/>
                    <TableColumn fx:id="colCategorie" text="Catégorie" prefWidth="150"/>
                    <TableColumn fx:id="colPrix" text="Prix" prefWidth="100"/>
                    <TableColumn fx:id="colQuantite" text="Quantité" prefWidth="100"/>
                </columns>
            </TableView>

            <!-- 💰 Valeur totale du stock -->
            <Label fx:id="lblValeurStock"
                   text="Valeur totale : 0 Ar"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <!-- 🔔 Zone de notification -->
            <Label fx:id="notificationLabel"
                   text=""
                   style="-fx-text-fill: green; -fx-font-weight: bold;" />
        </VBox>
    </center>
</BorderPane>
